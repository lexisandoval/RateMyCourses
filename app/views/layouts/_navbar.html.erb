<% if !logged_in? %>
  <nav class="navbar navbar-expand-lg navbar-light nav">
    <a class="navbar-brand main brand big" href="/">RateMyCourses</a>

    <button class="navbar-toggler white" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">

        <li class="nav-item"><%= link_to "Log In", login_path %></li>
        <li class="nav-item"><%= link_to "Sign Up", signup_path %></li>
      </ul>
    </div>
  </nav>
<% else %>
  <nav class="navbar navbar-expand-lg navbar-light nav">

    <a class="navbar-brand main brand big" href="/">RateMyCourses</a>

    <button class="navbar-toggler white" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to "Home", ratings_path %></li>
        <li class="nav-item"><%= link_to "Rate", new_user_rating_path(current_user) %></li>
        <li class="nav-item"><%= link_to "Profile", user_path(current_user) %></li>
        <li class="nav-item"><%= link_to "Log Out", logout_path, method:"delete"%></li>
      </ul>
    </div>
  </nav>
<% end %>