  <%= render partial: "layouts/errors", locals: {object: @user} %>

<div class="center">
  <h1 class="brand head">Sign Up</h1><br>

  <%= form_for(@user, :html => { class: 'form' }) do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><p class="smol"></p>
    
    <%= f.label :username %><br>
    <%= f.text_field :username %><br><p class="smol"></p>
    
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    <br>
    <%= f.submit "Create an Account" %>
  <% end %><h3></h3><br>

  <p><a class="black no_underline main brand" href="/">Go Back</a></p>
</div>