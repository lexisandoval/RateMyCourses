<div class="container mx-auto my-auto">
  <%= render partial: "layouts/errors", locals: {object: @user} %>

  <h1 class="brand head">Sign Up</h1><br>

  <%= form_for(@user, :html => { class: 'form' }) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.label :username %>
    <%= f.text_field :username %>
    
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Create an Account" %>
  <% end %><br>

  <p><a class="small main brand" href="/">Go Back</a></p><br>
</div>